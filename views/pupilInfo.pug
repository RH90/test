html
	head
		title!=title
		style
			include styles.css
		script(type="text/javascript")
			include script.js
		script(type="text/javascript")
			include sorttable.js
	body
		include head.pug
		CENTER
			div(style="display:inline-block")
				div(class="info-tables")
					form(action="/pupil/" + row.id,method="POST")
						table(style="width:auto;margin-right:10px")
							tr
								td!="Förnamn"
								td
									input(type="text", name="firstname",value=(row.firstname))
							tr
								td!="Efternamn"
								td
									input(type="text", name="lastname",value=(row.lastname))
							tr
								td!="Årskurs"
								td
									input(type="text", name="grade",value=(row.grade))
							tr
								td!="Klass"
								td
									input(type="text", name="classP",value=(row.classP))
							tr
								td!="År"
								td!=(row.year)
							tr
								td!="Skåp"
								td
									a(href="/locker/"+row.number)!=row.number
							tr 
								td!="Kommentar"
								td 
									textarea(rows="4",name="commentPupil")!=row.comment
							tr
								td
								td
									button(type="submit")!="Spara"
					include inventoryTable	
					include historyTable
					table(style="width:auto!important")
						if row.inschool==1
							td
								button(onclick=`graduate(${row.id})`)!="Gå ur skolan"
						else
							td
								button(onclick=`enroll(${row.id})`)!="Gå i skolan"